<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clickerBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_just_cookie"
    tools:context=".ClickerActivity">


    <ImageView
        android:id="@+id/logout"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginTop="0dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout_24px"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/cookieImage"
        android:layout_width="311dp"
        android:layout_height="292dp"
        android:paddingVertical="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/just_cookie" />

    <TextView
        android:id="@+id/cookieCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/agbalumo"
        android:shadowColor="#C5AAAA"
        android:shadowDx="-5"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="198Gazillion"
        android:textColor="#6F483D"
        android:textSize="30sp"
        app:fontFamily="@font/agbalumo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cookiePerSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:fontFamily="@font/agbalumo"
        android:shadowColor="#C5AAAA"
        android:shadowDx="-5"
        android:shadowDy="2"
        android:text="smth/s"
        android:textColor="#6F483D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cookieCounter" />


</androidx.constraintlayout.widget.ConstraintLayout>